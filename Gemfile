# A sample Gemfile
source "https://rubygems.org"
ruby "2.0.0"

group :test, :development do
  gem "rack-test"
  gem "rspec"
  gem "rspec-html-matchers"
  gem "dm-sqlite-adapter"
end

group :production do
  gem "pg"
  gem "dm-postgres-adapter"
end

gem "sinatra"
gem "dm-core"
gem "dm-migrations"
gem "dm-serializer"
